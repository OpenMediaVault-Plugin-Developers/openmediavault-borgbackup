# along with this program. If not, see <http://www.gnu.org/licenses/>.

set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

exit 0

OMV_name=$(omv_product_info "name")
OMV_packagename=$(omv_product_info "packagename")
OMV_versionname=$(omv_product_info "versionname")
OMV_version=$(dpkg-query -W -f='${Version}' ${OMV_packagename})

BORGBACKUP_FILENAME="borgbackup.conf"
BORGBACKUP_CONFIG="/etc/${BORGBACKUP_FILENAME}"

DIFF_SCRIPT_FILENAME="borgbackup-diff.conf"
DIFF_SCRIPT_CONFIG="/etc/${DIFF_SCRIPT_FILENAME}"

SERVICE_XPATH_NAME="borgbackup"
SERVICE_XPATH="/config/services/${SERVICE_XPATH_NAME}"

DRIVES="${SERVICE_XPATH}/drives/drive"
RULES="${SERVICE_XPATH}/rules/rule"

PLUGIN_VERSION="$(dpkg -l | grep $OMV_packagename-borgbackup | awk '{print $3}')"

# Create borgbackup config file
cat <<EOF > ${BORGBACKUP_CONFIG}
# this file was automatically generated from
# ${OMV_name} ${OMV_versionname} ${OMV_version}
# and 'openmediavault-borgbackup' ${PLUGIN_VERSION}

EOF

xmlstarlet sel -t -m "${SERVICE_XPATH}" \
    -i "blocksize != ''" -v "concat('block_size ', blocksize)" -n -b \
    -i "autosave != ''" -v "concat('autosave ', autosave)" -n -b \
    -i "nohidden[. = '1']" -o "nohidden" -n -b \
${OMV_CONFIG_FILE} | xmlstarlet unesc >> ${BORGBACKUP_CONFIG}

# Add default content
#echo "content /var/borgbackup/content" >> ${BORGBACKUP_CONFIG}

# Process drives
count=$(omv_config_get_count "${DRIVES}")
index=1
countp=0
while [ ${index} -le ${count} ]; do

    content=$(omv_config_get "${DRIVES}[position()=${index}]/content")
    data=$(omv_config_get "${DRIVES}[position()=${index}]/data")
    parity=$(omv_config_get "${DRIVES}[position()=${index}]/parity")
    path=$(omv_config_get "${DRIVES}[position()=${index}]/path")
    name=$(omv_config_get "${DRIVES}[position()=${index}]/name")
    label=$(omv_config_get "${DRIVES}[position()=${index}]/label")

    if [ "${path}" != "" ]; then
        echo "#####################################################################" >> ${BORGBACKUP_CONFIG}
        echo "# OMV-Name: ${name}  Drive Label: ${label}" >> ${BORGBACKUP_CONFIG}
        if [ "${content}" -eq "1" ]; then
            echo "content ${path}/borgbackup.content" >> ${BORGBACKUP_CONFIG}
        fi

        if [ "${data}" -eq "1" ]; then
            echo "disk ${name} ${path}" >> ${BORGBACKUP_CONFIG}
        fi

        if [ "${parity}" -eq "1" ]; then
            countp=$(( ${countp} + 1 ))

            if [ "${countp}" -le 6 ]; then
                if [ "${countp}" != "1" ]; then
                    echo "${countp}-parity ${path}/borgbackup.${countp}-parity" >> ${BORGBACKUP_CONFIG}
                else
                    echo "parity ${path}/borgbackup.parity" >> ${BORGBACKUP_CONFIG}
                fi
            fi
        fi
        echo >> ${BORGBACKUP_CONFIG}
    fi

    index=$(( ${index} + 1 ))
done

# Add default excludes
cat <<EOF >> ${BORGBACKUP_CONFIG}
exclude *.bak
exclude *.unrecoverable
exclude /tmp/
exclude lost+found/
exclude .content
exclude aquota.group
exclude aquota.user
exclude ${BORGBACKUP_FILENAME}*
EOF

# Process rules
count=$(omv_config_get_count "${RULES}")
index=1
while [ ${index} -le ${count} ]; do

    rtype=$(omv_config_get "${RULES}[position()=${index}]/rtype")
    rule=$(omv_config_get "${RULES}[position()=${index}]/rule1")
    rulefolder=$(omv_config_get "${RULES}[position()=${index}]/rule-folder")

    if [ "${rule}" != "" ]; then
        if [ "${rulefolder}" != "" ]; then
            echo "# Rule selected from ${rulefolder}" >> ${BORGBACKUP_CONFIG}
        fi

        if [ "${rtype}" != "0" ]; then
            echo "include ${rule}" >> ${BORGBACKUP_CONFIG}
        else
            echo "exclude ${rule}" >> ${BORGBACKUP_CONFIG}
        fi
    fi

    index=$(( ${index} + 1 ))
done

# backup borgbackup.conf
count=$(omv_config_get_count "${DRIVES}")
index=1
while [ ${index} -le ${count} ]; do

    data=$(omv_config_get "${DRIVES}[position()=${index}]/data")
    path=$(omv_config_get "${DRIVES}[position()=${index}]/path")

    # do backups - keep the last 3
    if [ "${path}" != "" ]; then
        if [ "${data}" -eq "1" ]; then
            if [ -f "${path}/${BORGBACKUP_FILENAME}.bak" ]; then
                rm -f "${path}/${BORGBACKUP_FILENAME}.bak"
            fi

            if [ -f "${path}/${BORGBACKUP_FILENAME}" ]; then
                mv "${path}/${BORGBACKUP_FILENAME}" "${path}/${BORGBACKUP_FILENAME}.bak"
            fi

            if [ -f "${BORGBACKUP_CONFIG}" ]; then
                if [ -d "${path}" ]; then
                    cp ${BORGBACKUP_CONFIG} ${path}/
                fi
            fi
        fi
    fi

    index=$(( ${index} + 1 ))
done


# create borgbackup diff script config file
cat <<EOF > ${DIFF_SCRIPT_CONFIG}
# this file was automatically generated from
# ${OMV_name} ${OMV_versionname} ${OMV_version}
# and 'openmediavault-borgbackup' ${PLUGIN_VERSION}

EOF

xmlstarlet sel -t -m "${SERVICE_XPATH}" \
    -i "syslog = 0" -o "SYSLOG=\"false\"" -n -b \
    -i "syslog = 1" -o "SYSLOG=\"true\"" -n -b \
    -i "debug = 0" -o "DEBUG=\"false\"" -n -b \
    -i "debug = 1" -o "DEBUG=\"true\"" -n -b \
    -i "sendmail = 0" -o "SENDMAIL=\"false\"" -n -b \
    -i "sendmail = 1" -o "SENDMAIL=\"true\"" -n -b \
    -i "runscrub = 0" -o "RUN_SCRUB=\"false\"" -n -b \
    -i "runscrub = 1" -o "RUN_SCRUB=\"true\"" -n -b \
    -i "scrubfreq != ''" -v "concat('SCRUB_FREQUENCY_IN_DAYS=', scrubfreq)" -n -b \
    -i "delthreshold != ''" -v "concat('DEL_THRESHOLD=', delthreshold)" -n -b \
    -i "scrubpercent != ''" -v "concat('SCRUB_PERCENT=', scrubpercent)" -n -b \
${OMV_CONFIG_FILE} | xmlstarlet unesc >> ${DIFF_SCRIPT_CONFIG}
