{
	"type": "config",
	"id": "conf.service.borgbackup",
	"title": "BorgBackup",
	"queryinfo": {
		"xpath": "//services/borgbackup",
		"iterable": false
	},
	"properties": {
		"repos": {
			"type": "object",
			"properties": {
				"repo": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"uuid": {
								"type": "string",
								"format": "uuidv4"
							},
							"name": {
								"type": "string"
							},
							"sharedfolderref": {
								"type": "string",
								"format": "uuidv4"
							},
							"passphrase": {
								"type": "string"
							},
							"encryption": {
								"type": "boolean"
							}
						}
					}
				}
			}
		},
		"archives": {
			"type": "object",
			"properties": {
				"archive": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"uuid": {
								"type": "string",
								"format": "uuidv4"
							},
							"name": {
								"type": "string"
							},
							"reporef": {
								"type": "string",
								"format": "uuidv4"
							},
							"compressiontype": {
								"type": "string",
								"enum": [ "none", "lz4", "lzma", "zlib" ],
								"default": "none"
							},
							"compressionratio": {
								"type": "integer",
								"minimum": 0,
								"maximum": 9,
								"default": 9
							},
							"onefs": {
								"type": "boolean",
								"default": false
							},
							"noatime": {
								"type": "boolean",
								"default": false
							},
							"include": {
								"type": "string"
							},
							"exclude": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}
