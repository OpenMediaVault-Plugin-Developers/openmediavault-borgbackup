{
	"type": "config",
	"id": "conf.service.borgbackup.archive",
	"title": "BorgBackup archive",
	"queryinfo": {
		"xpath": "//services/borgbackup/archives/archive",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"enable": {
			"type": "boolean",
			"default": true
		},
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"name": {
			"type": "string"
		},
		"reporef": {
			"type": "string",
			"format": "uuidv4"
		},
		"compressiontype": {
			"type": "string",
			"enum": [ "none", "zstd", "lz4", "lzma", "zlib" ],
			"default": "none"
		},
		"compressionratio": {
			"type": "integer",
			"minimum": 0,
			"maximum": 9,
			"default": 9
		},
		"onefs": {
			"type": "boolean",
			"default": false
		},
		"noatime": {
			"type": "boolean",
			"default": false
		},
		"include": {
			"type": "string"
		},
		"exclude": {
			"type": "string"
		},
		"hourly": {
			"type": "integer",
			"minimum": 0,
			"default": 0
		},
		"daily": {
			"type": "integer",
			"minimum": 0,
			"default": 7
		},
		"weekly": {
			"type": "integer",
			"minimum": 0,
			"default": 4
		},
		"monthly": {
			"type": "integer",
			"minimum": 0,
			"default": 3
		},
		"yearly": {
			"type": "integer",
			"minimum": 0,
			"default": 0
		},
		"ratelimit": {
			"type": "integer",
			"minimum": 0,
			"default": 0
		}
	}
}
